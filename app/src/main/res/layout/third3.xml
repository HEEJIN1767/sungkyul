<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ImageView
            android:id="@+id/restaurant1"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:scaleType="fitXY"
            android:src="@drawable/res1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/Text1"
            android:textColor="@color/black"
            android:text="음식 메뉴"
            android:textSize="30dp"
            android:gravity="center"
            android:background="#ED7D31"
            android:layout_gravity="center_horizontal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn1"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/fd21"

                android:drawablePadding="20dp"
                android:text="치킨가라아게카레동\n 4800원\n763kcal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="20dp"
                android:id="@+id/btn2"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:drawableLeft="@drawable/fd22"
                android:text="돈까스카레동\n 4200원\n825kcal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn3"
                android:drawablePadding="20dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:drawableLeft="@drawable/fd23"
                android:text="에비카레동\n 4300원\n818kcal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn4"
                android:drawablePadding="20dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:drawableLeft="@drawable/fd24"
                android:text="함박카레동\n 4300원\n861kcal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn5"
                android:drawablePadding="20dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:drawableLeft="@drawable/fd25"
                android:text="세종대왕돈까스\n 5000원\n924kcal" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn6"
                android:drawablePadding="20dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:drawableLeft="@drawable/fd26"
                android:text="치즈돈까스\n 4500원\n700kcal" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>