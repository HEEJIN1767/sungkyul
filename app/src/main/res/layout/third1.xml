<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/restaurant1"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:scaleType="fitXY"
        android:src="@drawable/res1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/Text1"
        android:textColor="@color/black"
        android:text="카테고리"
        android:textSize="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:background="#ED7D31"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/btn1"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="면 ,찌개 , 분식류\nNoodles , Snack"
        android:backgroundTint="#4DE6E6E6"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/btn2"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="돈가스 , 라이스류\nFry , Rice"
        android:backgroundTint="#4DE6E6E6"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/btn3"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="비빔밥 , 덮밥류\nThe Bab"
        android:backgroundTint="#4DE6E6E6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:id="@+id/btn5"
                android:src="@drawable/m"
                />
    </LinearLayout>

</LinearLayout>