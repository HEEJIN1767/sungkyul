<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/library1"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:scaleType="fitXY"
            android:src="@drawable/res"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="30dp"
            android:id="@+id/Text1"
            android:textColor="@color/black"
            android:text="정보"
            android:gravity="center"
            android:background="#ED7D31"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="운영시간"
                android:textSize="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textSize="17dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#4DE1E1E1"
                android:textColor="@color/black"
                android:text="학생식당 : 11:00 ~ 18:30 \n브레이크 타임 : 15:30 ~ 16:30 \n교직원 식당 : 11:30 ~ 13:30 "
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="위치"
                android:textSize="22dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/gps11"
                android:scaleType="fitCenter" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="경기도 안양시 만약구 성결대 중생관 지하 1층"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="원산지 표기"
                android:textSize="22dp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:id="@+id/orig1"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/origin"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/orig2"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/origin2"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/orig3"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/origin3"
                android:scaleType="fitCenter"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
